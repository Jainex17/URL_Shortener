{
    "manifest_version": 3,
    "name": "URL Shortener",
    "description": "Shorten URL in chrome extension",
    "version": "1.0",
    
    "permissions": [ 
        "activeTab",
        "notifications"
    ],
    "action": {
        "default_icon": "icon.png",
        "default_title": "URL Shortener",
        "default_popup": "popup.html"
    },
    "background.service_worker": {
        "script": ["background.js"]
    }
}